{
  "name": "design-tool-tailwind",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "concurrently": "^5.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "build:style": "postcss build src/index.css -o src/styles/tailwind.css",
    "watch:style": "postcss watch src/index.css -o src/styles/tailwind.css -w",
    "start": "concurrently  \"npm run watch:style\" \"react-scripts start\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.7.0",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^1.1.3",
    "prettier": "^1.18.2",
    "eslint-plugin-prettier": "^3.1.1"
  }
}
